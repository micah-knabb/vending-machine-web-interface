
@section StyleSheet {
    <link rel="stylesheet" href="~/Content/Vending/ModifyInventory.css" />
}

@section Scripts {
    <script src="~/Scripts/Vending/ModifyInventory.js" defer></script>
}

@section Title{
    Modify Inventory
}


    <div class="container modifyContainer">
        <div class="modifyHeading">
            <div class="modifyTitle row">Modify Inventory</div>
        </div>
        <div class="row selectItem">
            <div class="col-sm">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Slot Row
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item">1</a>
                        <a class="dropdown-item">2</a>
                        <a class="dropdown-item">3</a>
                        <a class="dropdown-item">4</a>
                    </div>
                </div>
            </div>
            <div class="col-sm">Item Name:</div>
            <div class="col-sm">
                <select class="form-control">
                    <option></option>
                    <option>Example Name</option>
                </select>
            </div>
            <div class="col-sm"></div>
        </div>
        <div class="row">
            <div class="col-sm">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Slot Column
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item">1</a>
                        <a class="dropdown-item">2</a>
                        <a class="dropdown-item">3</a>
                    </div>
                </div>
            </div>
            <div class="col-sm">Qty to Add:</div>
            <div class="col-sm">
                <select class="form-control">
                    <option></option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </select>
            </div>
            <div class="col-sm"></div>
        </div>
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Sound:</span>
                </div>
                <input type="text" class="form-control" placeholder="Enter sound here." aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="col-sm"></div>
        </div>
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Image:</span>
                </div>
                <input type="text" class="form-control" placeholder="Enter image url here." aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="col-sm"></div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col">Category:</div>
            <div class="col">
                <select class="form-control">
                    <option></option>
                    <option>Chips example</option>
                </select>
            </div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <button type="button" class="btn btn-primary">Save</button>
            </div>
            <div class="col"></div>
        </div>
    </div>